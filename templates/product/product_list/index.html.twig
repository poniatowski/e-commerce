{% extends 'master.html.twig' %}

{% block content %}
<div class="wrapper">

    <div class="get-quote">
        <div class="row">
            <div class="col-sm-10 col-12">
                <h3 id="quote">Product list</h3>
            </div>
            <div class="col-sm-2 col-12">
                <a href="{{ path('product_add') }}" class="btn btn-primary active pull-right" role="button" aria-pressed="true">Add product</a>
            </div>
        </div>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <div class="row">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Currency</th>
                <th>Created</th>
            </tr>
            </thead>
            <tbody>
            {% for key, product in products %}
                <tr>
                    <th scope="row">{{ key+1 }}</th>
                    <td>{{ product.name }}</td>
                    <td>{{ product.description }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.currency }}</td>
                    <td>{{ product.created|date('Y-m-d H:i:s')  }}</td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>

    <div class="navigation">
        {{ knp_pagination_render(products) }}
    </div>
</div>
{% endblock %}
